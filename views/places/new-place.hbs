<div class="container">
    <h1>Create a Place</h1>
    <hr>

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/places/new" method="POST">
                <div class="form-group">
                    <label for="name-input">Name</label>
                    <input type="text" class="form-control" id="name-input" name="name">
                </div>
                <br>
                <div class="form-group">
                    <label for="type-input">Type</label>
                    <select name="type" id="type-input" class="form-control">
                        <option value='Coffee shop'>Coffee shop</option>
                        <option value="Bookstore">Bookstore</option>
                    </select>
                </div>
                <br>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" name="latitude" placeholder="latitude" class="form-control">
                    <br>
                    <input type="text" name="longitude" placeholder="longitude" class="form-control">
                </div>
                <br>
                <button type="submit" class="btn btn-dark btn-block">Create</button>
            </form>
        </div>
    </div>


    <hr>
    <a href="/" class="btn btn-dark">Go back</a>
</div>